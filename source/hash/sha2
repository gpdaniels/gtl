    public:
        using hash_type = typename internals<sha2::size>::hash_type;

    private:
        using additional_type = typename internals<sha2::size>::additional_type;

    private:
        /// @brief  Internal type used to construct blocks of data for processing.
        struct block_type final {
            unsigned long long int length_bytes = 0;
            unsigned char data[sha2::block_size] = {};
        };

    private:
        /// @brief  The number of bytes of data that have been hashed.
        unsigned long long int hashed_length = 0;

        /// @brief  The current block of data being filled.
        block_type current_block = {};

        /// @brief  The current hash.
        hash_type current_hash = {};

        /// @brief  The current additional hash information.
        additional_type current_additional = {};

        /// @brief  Flag showing whether the hash has been finalised.
        bool finalised = false;

    private:
        /// @brief  Packs a number of bytes into a single integer.
        /// @param  bytes The bytes to convert.
        /// @return The bytes packed into a single type.
        template <typename packed_type>
        constexpr static packed_type pack_big_endian(const unsigned char bytes[sizeof(packed_type)]) {
            if constexpr (sizeof(packed_type) == 4) {
                return (static_cast<packed_type>(bytes[0]) << 24) | (static_cast<packed_type>(bytes[1]) << 16) | (static_cast<packed_type>(bytes[2]) << 8) | (static_cast<packed_type>(bytes[3]) << 0);
            }
            else if constexpr (sizeof(packed_type) == 8) {
                return (static_cast<packed_type>(bytes[0]) << 56) |
                       (static_cast<packed_type>(bytes[1]) << 48) |
                       (static_cast<packed_type>(bytes[2]) << 40) |
                       (static_cast<packed_type>(bytes[3]) << 32) |
                       (static_cast<packed_type>(bytes[4]) << 24) |
                       (static_cast<packed_type>(bytes[5]) << 16) |
                       (static_cast<packed_type>(bytes[6]) << 8) |
                       (static_cast<packed_type>(bytes[7]) << 0);
            }
            else {
                static_assert((sizeof(packed_type) == 4) || (sizeof(packed_type) == 8), "The size of the packed type must be 4 or 8.");
            }
        }

        /// @brief  Unpacks four bytes from a single type.
        /// @param  value The value to unpack.
        /// @param  bytes The bytes to receive the unpacked data.
        template <typename packed_type>
        constexpr static void unpack_big_endian(packed_type value, unsigned char bytes[sizeof(packed_type)]) {
            if constexpr (sizeof(packed_type) == 4) {
                bytes[0] = static_cast<unsigned char>((value >> 24) & 0xFF);
                bytes[1] = static_cast<unsigned char>((value >> 16) & 0xFF);
                bytes[2] = static_cast<unsigned char>((value >> 8) & 0xFF);
                bytes[3] = static_cast<unsigned char>((value >> 0) & 0xFF);
            }
            else if constexpr (sizeof(packed_type) == 8) {
                bytes[0] = static_cast<unsigned char>((value >> 56) & 0xFF);
                bytes[1] = static_cast<unsigned char>((value >> 48) & 0xFF);
                bytes[2] = static_cast<unsigned char>((value >> 40) & 0xFF);
                bytes[3] = static_cast<unsigned char>((value >> 32) & 0xFF);
                bytes[4] = static_cast<unsigned char>((value >> 24) & 0xFF);
                bytes[5] = static_cast<unsigned char>((value >> 16) & 0xFF);
                bytes[6] = static_cast<unsigned char>((value >> 8) & 0xFF);
                bytes[7] = static_cast<unsigned char>((value >> 0) & 0xFF);
            }
            else {
                static_assert((sizeof(packed_type) == 4) || (sizeof(packed_type) == 8), "The size of the packed type must be 4 or 8.");
            }
        }

        /// @brief  Rotate a 32 bit value right by a shift amount.
        /// @param  value The value to rotate.
        /// @param  shift The number of bits to rotate by.
        /// @return The value after it has been rotated right by shift bits.
        constexpr static unsigned int rotate_right(unsigned int value, unsigned int shift) {
            constexpr const unsigned int mask = (8 * sizeof(unsigned int) - 1);
            shift &= mask;
            return (value >> shift) | (value << ((static_cast<unsigned int>(-static_cast<signed int>(shift))) & mask));
        }

        /// @brief  Rotate a 64 bit value right by a shift amount.
        /// @param  value The value to rotate.
        /// @param  shift The number of bits to rotate by.
        /// @return The value after it has been rotated right by shift bits.
        constexpr static unsigned long long int rotate_right(unsigned long long int value, unsigned long long int shift) {
            constexpr const unsigned long long int mask = (8 * sizeof(unsigned long long int) - 1);
            shift &= mask;
            return (value >> shift) | (value << ((static_cast<unsigned long long int>(-static_cast<signed long long int>(shift))) & mask));
        }

    private:
        /// @brief  Perform the hashing algorithm on a block of data.
        constexpr void hash_block() {
            using base_type = typename internals<sha2::size>::base_type;

            base_type A = pack_big_endian<base_type>(&this->current_hash.data[0 * sizeof(base_type)]);
            base_type B = pack_big_endian<base_type>(&this->current_hash.data[1 * sizeof(base_type)]);
            base_type C = pack_big_endian<base_type>(&this->current_hash.data[2 * sizeof(base_type)]);
            base_type D = pack_big_endian<base_type>(&this->current_hash.data[3 * sizeof(base_type)]);
            base_type E = pack_big_endian<base_type>(&this->current_hash.data[4 * sizeof(base_type)]);
            base_type F = pack_big_endian<base_type>(&this->current_hash.data[5 * sizeof(base_type)]);
            base_type G = 0;
            base_type H = 0;

            if constexpr (sha2::size == 224) {
                G = pack_big_endian<base_type>(&this->current_hash.data[6 * sizeof(base_type)]);
                H = pack_big_endian<base_type>(&this->current_additional.data[0 * sizeof(base_type)]);
            }
            else if constexpr (sha2::size == 256) {
                G = pack_big_endian<base_type>(&this->current_hash.data[6 * sizeof(base_type)]);
                H = pack_big_endian<base_type>(&this->current_hash.data[7 * sizeof(base_type)]);
            }
            else if constexpr (sha2::size == 384) {
                G = pack_big_endian<base_type>(&this->current_additional.data[0 * sizeof(base_type)]);
                H = pack_big_endian<base_type>(&this->current_additional.data[1 * sizeof(base_type)]);
            }
            else if constexpr (sha2::size == 512) {
                G = pack_big_endian<base_type>(&this->current_hash.data[6 * sizeof(base_type)]);
                H = pack_big_endian<base_type>(&this->current_hash.data[7 * sizeof(base_type)]);
            }

            // Fill the working block from the current.
            base_type working_block[sha2::processing_rounds] = {};
            for (unsigned int index = 0; index < sha2::block_size / sizeof(base_type); ++index) {
                working_block[index] = pack_big_endian<base_type>(&this->current_block.data[index * sizeof(base_type)]);
            }

            // Mix to fill the remainder of the working block.
            for (unsigned int index = sha2::block_size / sizeof(base_type); index < sha2::processing_rounds; ++index) {
                const base_type S0 = rotate_right(working_block[index - 15], internals<sha2::size>::shifts[0]) ^ rotate_right(working_block[index - 15], internals<sha2::size>::shifts[1]) ^ (working_block[index - 15] >> internals<sha2::size>::shifts[2]);
                const base_type S1 = rotate_right(working_block[index - 2], internals<sha2::size>::shifts[3]) ^ rotate_right(working_block[index - 2], internals<sha2::size>::shifts[4]) ^ (working_block[index - 2] >> internals<sha2::size>::shifts[5]);
                working_block[index] = working_block[index - 16] + S0 + working_block[index - 7] + S1;
            }

            // Do the hash iterations.
            for (unsigned int iteration = 0; iteration < sha2::processing_rounds; ++iteration) {
                const base_type S1 = rotate_right(E, internals<sha2::size>::shifts[6]) ^ rotate_right(E, internals<sha2::size>::shifts[7]) ^ rotate_right(E, internals<sha2::size>::shifts[8]);
                const base_type CH = (E & F) ^ ((~E) & G);
                const base_type TEMP1 = H + S1 + CH + internals<sha2::size>::constants[iteration] + working_block[iteration];
                const base_type S0 = rotate_right(A, internals<sha2::size>::shifts[9]) ^ rotate_right(A, internals<sha2::size>::shifts[10]) ^ rotate_right(A, internals<sha2::size>::shifts[11]);
                const base_type MAJ = (A & B) ^ (A & C) ^ (B & C);
                const base_type TEMP2 = S0 + MAJ;

                H = G;
                G = F;
                F = E;
                E = D + TEMP1;
                D = C;
                C = B;
                B = A;
                A = TEMP1 + TEMP2;
            }

            unpack_big_endian<base_type>(pack_big_endian<base_type>(&this->current_hash.data[0 * sizeof(base_type)]) + A, &this->current_hash.data[0 * sizeof(base_type)]);
            unpack_big_endian<base_type>(pack_big_endian<base_type>(&this->current_hash.data[1 * sizeof(base_type)]) + B, &this->current_hash.data[1 * sizeof(base_type)]);
            unpack_big_endian<base_type>(pack_big_endian<base_type>(&this->current_hash.data[2 * sizeof(base_type)]) + C, &this->current_hash.data[2 * sizeof(base_type)]);
            unpack_big_endian<base_type>(pack_big_endian<base_type>(&this->current_hash.data[3 * sizeof(base_type)]) + D, &this->current_hash.data[3 * sizeof(base_type)]);
            unpack_big_endian<base_type>(pack_big_endian<base_type>(&this->current_hash.data[4 * sizeof(base_type)]) + E, &this->current_hash.data[4 * sizeof(base_type)]);
            unpack_big_endian<base_type>(pack_big_endian<base_type>(&this->current_hash.data[5 * sizeof(base_type)]) + F, &this->current_hash.data[5 * sizeof(base_type)]);

            if constexpr (sha2::size == 224) {
                unpack_big_endian<base_type>(pack_big_endian<base_type>(&this->current_hash.data[6 * sizeof(base_type)]) + G, &this->current_hash.data[6 * sizeof(base_type)]);
                unpack_big_endian<base_type>(pack_big_endian<base_type>(&this->current_additional.data[0 * sizeof(base_type)]) + H, &this->current_additional.data[0 * sizeof(base_type)]);
            }
            else if constexpr (sha2::size == 256) {
                unpack_big_endian<base_type>(pack_big_endian<base_type>(&this->current_hash.data[6 * sizeof(base_type)]) + G, &this->current_hash.data[6 * sizeof(base_type)]);
                unpack_big_endian<base_type>(pack_big_endian<base_type>(&this->current_hash.data[7 * sizeof(base_type)]) + H, &this->current_hash.data[7 * sizeof(base_type)]);
            }
            else if constexpr (sha2::size == 384) {
                unpack_big_endian<base_type>(pack_big_endian<base_type>(&this->current_additional.data[0 * sizeof(base_type)]) + G, &this->current_additional.data[0 * sizeof(base_type)]);
                unpack_big_endian<base_type>(pack_big_endian<base_type>(&this->current_additional.data[1 * sizeof(base_type)]) + H, &this->current_additional.data[1 * sizeof(base_type)]);
            }
            else if constexpr (sha2::size == 512) {
                unpack_big_endian<base_type>(pack_big_endian<base_type>(&this->current_hash.data[6 * sizeof(base_type)]) + G, &this->current_hash.data[6 * sizeof(base_type)]);
                unpack_big_endian<base_type>(pack_big_endian<base_type>(&this->current_hash.data[7 * sizeof(base_type)]) + H, &this->current_hash.data[7 * sizeof(base_type)]);
            }
        }

    public:
        /// @brief  Reset the internal state of the hash.
        constexpr void reset() {
            this->hashed_length = 0;
            this->current_block = {};
            this->current_hash = {};
            this->current_additional = {};
            this->finalised = false;
        }

        /// @brief  Consume data, constructing blocks and hashing as needed.
        /// @param  data Input data pointer.
        /// @param  length Valid length of the input data pointer.
        constexpr void consume(const char* data, unsigned long long int length) {
            GTL_SHA2_ASSERT(this->finalised == false, "Finalise must not be called before consume().");
            // TODO: sha2-384 and sha2-512 should support up to 2^128.
            GTL_SHA2_ASSERT(this->hashed_length <= this->hashed_length + length, "Total hashed data must be less than 2^64 bytes.");

            // Count how much data has been consumed.
            this->hashed_length += length;

            // Block construction and processing.
            while (length--) {
                // Append data to the current block.
                this->current_block.data[this->current_block.length_bytes++] = static_cast<unsigned char>(*data++);

                // If full, hash.
                if (this->current_block.length_bytes == sha2::block_size) {
                    this->hash_block();
                    this->current_block = {};
                }
            }
        }

        /// @brief  Finishes processing any remaining buffered data.
        constexpr void finalise() {
            GTL_SHA2_ASSERT(this->finalised == false, "Finalise must not be called before finalise().");

            using base_type = typename internals<sha2::size>::base_type;

            // Pad the data with a single 0x80 on the end.
            this->current_block.data[this->current_block.length_bytes++] = static_cast<unsigned char>(0x80);

            // Check if there is enough space in the final chunk for the data length.
            if (this->current_block.length_bytes > (sha2::block_size - (sizeof(base_type) * 2))) {
                this->hash_block();
                this->current_block = {};
            }

            // Add the data length to the chunk.
            const unsigned long long int hashed_length_bits = this->hashed_length * 8;
            if constexpr ((sha2::size == 224) || (sha2::size == 256)) {
                unpack_big_endian<base_type>((hashed_length_bits >> 32) & 0xFFFFFFFF, &this->current_block.data[sha2::block_size - (sizeof(base_type) * 2)]);
                unpack_big_endian<base_type>((hashed_length_bits >> 0) & 0xFFFFFFFF, &this->current_block.data[sha2::block_size - (sizeof(base_type) * 1)]);
            }
            else if constexpr ((sha2::size == 384) || (sha2::size == 512)) {
                // TODO: The upper 64 bits of the 128 bit length value are zero as sizes above 2^64 are currently unsupported.
                unpack_big_endian<base_type>(0ull, &this->current_block.data[sha2::block_size - (sizeof(base_type) * 2)]);
                unpack_big_endian<base_type>(hashed_length_bits, &this->current_block.data[sha2::block_size - (sizeof(base_type) * 1)]);
            }

            // Hash the block.
            this->hash_block();

            this->finalised = true;
        }

        /// @brief  Calculate the final hash from the state and return it.
        /// @return The resultant hash.
        constexpr const hash_type& get_hash() const {
            GTL_SHA2_ASSERT(this->finalised == true, "Finalise must be called before get_hash().");
            return this->current_hash;
        }

    public:
        /// @brief  Simple type to hold the string representation of the hash.
        struct hash_string_type final {
            char hash[(sha2::hash_size * 2) + 1] = {};
        };

        /// @brief  Convert a hash into its string representation.
        /// @param  hash The hash to convert.
        /// @return The string representation of the hash, with null termination.
        constexpr static hash_string_type hash_to_string(const hash_type& hash) {
            hash_string_type output;
            constexpr const char* hex_characters = "0123456789ABCDEF";
            for (unsigned int index = 0u; index < (sha2::hash_size * 2); ++index) {
                output.hash[index] = hex_characters[(hash.data[index / 2] >> ((1 - (index % 2)) * 4)) & 0xF];
            }
            output.hash[sha2::hash_size * 2] = 0;
            return output;
        }

    public:
        /// @brief  Hash a buffer of data.
        /// @param  data Input data pointer.
        /// @param  length Valid length of the input data pointer.
        static hash_type hash(const char* data, const unsigned long long int length) {
            sha2 hash_function;
            hash_function.reset();
            hash_function.consume(data, length);
            hash_function.finalise();
            return hash_function.get_hash();
        }
    };

    using sha2_224 = sha2<224>;
    using sha2_256 = sha2<256>;
    using sha2_384 = sha2<384>;
    using sha2_512 = sha2<512>;
}

#undef GTL_SHA2_ASSERT

#endif // GTL_HASH_SHA2_HPP
