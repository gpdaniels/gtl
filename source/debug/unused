#pragma once
#ifndef GTL_DEBUG_UNUSED_HPP
#define GTL_DEBUG_UNUSED_HPP

// Summary: Macro for hiding unused variable warnings.

namespace gtl {
    namespace unused {

#define GTL_UNUSED(VARIABLE) (static_cast<void>(VARIABLE))

    }
}

#endif // GTL_DEBUG_UNUSED_HPP
