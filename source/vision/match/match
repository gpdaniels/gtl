#pragma once
#ifndef GTL_VISION_MATCH_MATCH_HPP
#define GTL_VISION_MATCH_MATCH_HPP

// Summary: Simple structure to hold a the information defining a matched pair of features. [wip]

namespace {
    using size_t = decltype(sizeof(0));
}

namespace gtl {
    class match final {
    public:
        size_t lhs_index;
        size_t rhs_index;
        float score;
    };
}

#endif // GTL_VISION_MATCH_MATCH_HPP
